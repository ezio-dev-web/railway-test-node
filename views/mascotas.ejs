<%- include("template/header", {tituloWeb : 'Mascotas'}) %>

   <div class="container">

      <h1>CRUD Mongo</h1>
      <a
         class="btn btn-success btn-block my-4"
         href="/mascotas/crear"
      >
         Crear nueva Mascota
      </a>

      <table class="table">
         <thead>
            <tr>
               <th scope="col">#</th>
               <th scope="col">Nombre </th>
               <th scope="col">Descripcion</th>
               <th scope="col">Acci√≥n</th>
            </tr>
         </thead>
         <tbody>
            <% if (arrayMascotas.length > 0) { %>
         
               <% arrayMascotas.forEach( item => { %>
                  <tr>
                     <th scope="row"><%= item.id %></th>
                     <td><%= item.nombre %></td>
                     <td><%= item.descripcion %></td>
                     <td>
                        <a 
                           href="mascotas/<%= item.id %>"
                           class="btn btn-warning btn-sm"
                        >
                           Editar
                        </a>
                     </td>
                  </tr>
               <% }) %>
      
            <% } %>
         </tbody>
      </table>

   </div>

<%- include("template/footer") %>